<div class="mx-auto mt-4 w-25">
  <h2 class="text-center mb-5">Log in</h2>

  <%= form_for(resource, as: resource_name, url: session_path(resource_name), class: "needs-validation p-5 rounded bg-light shadow ") do |f| %>

    <div class="form-floating mb-3">
      <%= f.email_field :email, autofocus: true, class: "form-control", placeholder: "Email" %>
      <%= f.label :email %>
    </div>

    <div class="form-floating mb-3">
      <%= f.password_field :password, class: "form-control", placeholder: "Contraseña" %>
      <%= f.label :Contraseña %>
    </div>

    <div class="actions">
      <%= f.submit "Iniciar Sesión", class:"btn btn-outline-success w-100"%>
    </div>
  <% end %>

</div>
