<div class="mx-auto mt-4 w-50">
  <%= form_with(model: user, class: "needs-validation p-5 rounded bg-light shadow ") do |form| %>
    <div class="form-floating mb-3" >
      <%= form.text_field :nombre, class: "form-control", placeholder: "Nombre" %>
      <%= form.label :nombre %>
    </div>

    <div class="form-floating mb-3" >
      <%= form.text_field :apellido, class: "form-control", placeholder: "Apellido" %>
      <%= form.label :apellido %>
    </div>

    <div class="form-floating mb-3" >
      <%= form.telephone_field :telefono, class: "form-control", placeholder: "Teléfono" %>
      <%= form.label :telefono %>
    </div>

    <div class="form-floating mb-3" >
      <%= form.email_field :email, class: "form-control", placeholder: "Email" %>
      <%= form.label :email %>
    </div>

    <div>
      <%= link_to "← Volver", user, class:"btn btn-outline-secondary mt-2" %>
      <%= form.submit "Guardar", class: "btn btn-outline-primary mt-2" %>
    </div>
  <% end %>

</div>
