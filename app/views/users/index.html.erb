      <%= link_to "Show this user", user, class:"btn btn-sm btn-outline-success mb-2" %>
      <%= link_to "Borrar cliente", user_path(user), method: :delete, data: { confirm: "Â¿EstÃ¡s seguro que quieres borrar este cliente?" }, class: "btn btn-sm btn-outline-danger" %>

