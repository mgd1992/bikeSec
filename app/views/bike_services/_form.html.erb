<div class="mx-auto mt-3 w-50">
  <div class="p-5 rounded bg-light shadow">

    <% if @bike_service.errors.any? %>
      <div class="alert alert-danger">
        <h4>Errores al guardar el servicio:</h4>
        <ul>
          <% @bike_service.errors.full_messages.each do |message| %>
            <li><%= message %></li>
          <% end %>
        </ul>
      </div>
    <% end %>

    <%= form_with(model: [@user, @bike_service], local: true) do |form| %>

      <div class="mb-3">
        <%= form.label :descripcion, "Descripción", class: "form-label" %>
        <%= form.text_area :descripcion, class: "form-control", rows: 4 %>
      </div>

      <div class="mb-3">
        <%= form.label :date, "Fecha del servicio", class: "form-label" %>
        <%= form.text_field :date, class: "form-control", data: { controller: "datepicker" }, placeholder: "Fecha" %>
      </div>

      <div class="form-floating mb-3">
        <%= form.number_field :cost, class: "form-control", step: "0.01", placeholder: "Precio"  %>
        <%= form.label :cost, "Precio" %>
      </div>

      <div class="d-flex justify-content-between mt-4">
        <%= link_to "← Volver", user, class:"btn btn-outline-secondary" %>
        <%= form.submit "Guardar Servicio", class: "btn btn-primary" %>
      </div>
    <% end %>

  </div>
</div>
